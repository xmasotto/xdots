#!/bin/bash

net session &>/dev/null
if [ $? -ne 0 ]; then
    echo "Must be root"
    exit 1
fi

if [[ "$CYGWIN" != *winsymlinks:native* ]]; then
    echo "winsymlinks:native must be in \$CYGWIN"
    exit 1
fi

echo "
export EMACS=/cygdrive/c/ProgramData/chocolatey/bin/emacs
export EMACS_CLIENT=\"emacsclientw.exe -na runemacs.exe\"
source $HOME/xdots/bashrc
" > "$HOME/.profile"

source "$HOME/.profile"
xdots_setup

#choco install curl
#choco install python
#choco install pip

#alias pip="/cygdrive/c/tools/python/scripts/pip"

